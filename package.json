{
  "name": "form_and_nodejs",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "node-sass": "^4.13.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "stylelint": "stylelint src/*.{css,scss,sass}",
    "stylelint:fix": "stylelint src/*.{css,scss,sass} --fix",
    "eslint": "eslint  src/*.{js,jsx}",
    "eslint:fix": "eslint  src/*.{js,jsx} --fix",
    "eslint:fix:layout": "eslint  src/*.{js,jsx} --fix --fix-type layout",
    "lint": "npm run eslint & npm run stylelint",
    "lint:fix": "npm run eslint:fix & npm run stylelint:fix",
    "prettier": "prettier src/**/*.*"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.5",
    "prettier": "2.0.4",
    "stylelint": "^13.3.2",
    "stylelint-config-recommended": "^3.0.0"
  },
  "stylelint": {
    "extends": "stylelint-config-recommended"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "overrides": [
      {
        "files": "src/**/*.{js,jsx,ts,tsx,json}",
        "options": {
          "arrowParens": "avoid",
          "bracketSpacing": false,
          "jsxBracketSameLine": false,
          "jsxSingleQuote": false,
          "printWidth": 100,
          "proseWrap": "always",
          "quoteProps": "as-needed",
          "semi": true,
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      },
      {
        "files": [
          "src/**/*/{css,scss,sass,less}"
        ],
        "options": {
          "bracketSpacing": true,
          "printWidth": 80,
          "singleQuote": false,
          "tabWidth": 2,
          "useTabs": false
        }
      }
    ]
  },
  "lint-staged": {
    "src/**/*.{css,scss,sass,less,js,jsx,json}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{js,jsx}": [
      "eslint --fix --fix-type layout",
      "git add"
    ],
    "src/**/*.{css,scss,sass,less}": [
      "stylelint"
    ]
  }
}
